<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Below is the coding framework for your HTML code"
        android:textColor="#f50d34"
        android:textSize="20sp"
        android:layout_weight="0.31"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:src="@drawable/back"/>

    <ImageView
        android:id="@+id/imgFront"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/front"
        android:layout_alignTop="@+id/imgBack"
        android:layout_alignStart="@+id/imgBack" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body"
        android:id="@+id/btnFlip"
        android:layout_alignTop="@+id/button6"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Where would you put the Tag (H1) ? \n (Hint) It is the part displayed by the browser \n Please select below "
        android:id="@+id/textView5"
        android:layout_below="@+id/imgBack"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Head"
        android:id="@+id/button2"
        android:onClick="showToast"
        android:layout_alignTop="@+id/button6"
        android:layout_alignStart="@+id/textView5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/button6"
        android:onClick="showToast"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />


</RelativeLayout>