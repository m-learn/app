<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a5da6e"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select any lesson below"
        android:id="@+id/textViewl" />

    <Button
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:text="INTRODUCTION TO HTML"
        android:onClick="startlesson"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:text="HTML BASICS"
        android:onClick="startlesson"
        android:id="@+id/button8"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:text="HTML ELEMENTS"
        android:onClick="startlesson"
        android:id="@+id/button9"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:text="RECAP PART 1"
        android:onClick="startlesson"
        android:id="@+id/button10"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:text="HTML RECAP TASK"
        android:onClick="startlesson"
        android:id="@+id/button11"
        android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:text="HTML TASK"
        android:onClick="startlesson"
        android:id="@+id/button12"
        android:layout_gravity="center_horizontal" />

</LinearLayout>